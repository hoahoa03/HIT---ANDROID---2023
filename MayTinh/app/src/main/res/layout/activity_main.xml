<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@color/xam"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fx600_plus+++"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/blackxam"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@color/xanhlama"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CunXinh_iu iu mn!"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/red1"
                    android:fontFamily="cursive"
                    />

            </LinearLayout>

        </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="end"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:paddingEnd="15dp"
            >

            <TextView
                android:gravity="center"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:text="Ỏ, dùng là có quà nhaaa mọi người...!"
                android:textSize="16sp"
                android:textStyle="italic"
                android:textColor="@color/timtim"
                />

            <TextView
                android:gravity="center"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Input"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="cursive"
                android:textColor="@color/red1"
                android:background="@drawable/boder4"
                />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="end"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/nhap"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text=""
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="cursive"
                android:textColor="@color/red1"
                android:background="@drawable/boder5"
                />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:paddingEnd="15dp"
            >

            <TextView
                android:id="@+id/qua"
                android:gravity="center"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="italic"
                android:textColor="@color/timtim"
                />

            <TextView
                android:gravity="center"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Output"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="cursive"
                android:textColor="@color/red1"
                android:background="@drawable/boder4"
                />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="end"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/ra"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text=""
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="cursive"
                android:textColor="@color/red1"
                android:background="@drawable/boder5"
                />

        </LinearLayout>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="32dp"
        />

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:gravity="center"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/ac"
                    android:gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="AC"
                    android:textSize="35sp"
                    android:textColor="@color/black"
                    android:background="@drawable/boder1"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-thin"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/percent"
                    android:gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="%"
                    android:textSize="35sp"
                    android:textColor="@color/black"
                    android:background="@drawable/boder1"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-thin"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                >

                <ImageView
                    android:id="@+id/delete"
                    android:gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/delete"
                    android:background="@drawable/boder1"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/thuong"
                    android:gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="/"
                    android:textSize="35sp"
                    android:textColor="@color/black"
                    android:background="@drawable/boder3"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-thin"
                    />

            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/so7"
                    android:gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="7"
                    android:textSize="35sp"
                    android:textColor="@color/white"
                    android:background="@drawable/boder2"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-thin"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/so8"
                    android:gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="8"
                    android:textSize="35sp"
                    android:textColor="@color/white"
                    android:background="@drawable/boder2"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-thin"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/so9"
                    android:gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="9"
                    android:textSize="35sp"
                    android:textColor="@color/white"
                    android:background="@drawable/boder2"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-thin"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/tich"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="*"
                    android:textSize="40sp"
                    android:textColor="@color/black"
                    android:background="@drawable/boder3"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-thin"
                    />

            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/so4"
                    android:gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="4"
                    android:textSize="35sp"
                    android:textColor="@color/white"
                    android:background="@drawable/boder2"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-thin"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/so5"
                    android:gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="5"
                    android:textSize="35sp"
                    android:textColor="@color/white"
                    android:background="@drawable/boder2"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-thin"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/so6"
                    android:gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="6"
                    android:textSize="35sp"
                    android:textColor="@color/white"
                    android:background="@drawable/boder2"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-thin"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/hieu"
                    android:gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="-"
                    android:textSize="40sp"
                    android:textColor="@color/black"
                    android:background="@drawable/boder3"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-thin"
                    />

            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/so1"
                    android:gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="1"
                    android:textSize="35sp"
                    android:textColor="@color/white"
                    android:background="@drawable/boder2"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-thin"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/so2"
                    android:gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="2"
                    android:textSize="35sp"
                    android:textColor="@color/white"
                    android:background="@drawable/boder2"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-thin"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/so3"
                    android:gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="3"
                    android:textSize="35sp"
                    android:textColor="@color/white"
                    android:background="@drawable/boder2"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-thin"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/tong"
                    android:gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:text="+"
                    android:textSize="40sp"
                    android:textColor="@color/black"
                    android:background="@drawable/boder3"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-thin"
                    />

            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_weight="4"
            >

            <LinearLayout
                android:layout_width="162dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="2"
                >

                <TextView
                    android:id="@+id/so0"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="170dp"
                    android:layout_height="80dp"
                    android:text="Khum"
                    android:textSize="35sp"
                    android:textColor="@color/white"
                    android:background="@drawable/boder2"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-thin"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    >

                    <TextView
                        android:id="@+id/dauphay"
                        android:gravity="center"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:text=","
                        android:textSize="40sp"
                        android:textColor="@color/white"
                        android:background="@drawable/boder2"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-thin"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    >

                    <TextView
                        android:id="@+id/ketqua"
                        android:gravity="center"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:text="="
                        android:textSize="40sp"
                        android:textColor="@color/black"
                        android:background="@drawable/boder3"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-thin"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>








</LinearLayout>






























